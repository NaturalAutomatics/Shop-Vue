{
  "name": "vue-shop",
  "version": "1.0.0",
  "description": "Full-stack Vue.js e-commerce application with Go backend",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend-vue && npm run dev",
    "dev:backend": "cd backend-go && go run .",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend-vue && npm run build",
    "build:backend": "cd backend-go && go build -o vue-shop-backend.exe",
    "start": "powershell -ExecutionPolicy Bypass -File start-full-stack.ps1",
    "install:all": "cd frontend-vue && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "keywords": ["vue", "go", "postgresql", "e-commerce", "full-stack"],
  "author": "Vue Learner",
  "license": "MIT"
}